@model BeerRoute.Models.Visita

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir Visita</h1>

<h3>Tem certeza de que deseja excluir esta visita?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuário</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
        <dt class="col-sm-2">Cervejaria</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cervejaria.Nome)
        </dd>
        <dt class="col-sm-2">Data da Visita</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVisita)
        </dd>
        <dt class="col-sm-2">Créditos Gastos</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreditosUtilizados)
        </dd>
        <dt class="col-sm-2">Avaliação</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Avaliacao)
        </dd>
        <dt class="col-sm-2">Comentário</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comentario)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
    </form>
</div>