@model BeerRoute.Models.ViewModels.ViewModelCervejariaCervejas

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>CervejariaTipoCerveja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CervejariaTipoCerveja.CervejariaId" class="control-label">Cervejaria</label>
                <select asp-for="CervejariaTipoCerveja.CervejariaId" class="form-control" asp-items="@(new SelectList(Model.Cervejarias, "Id", "Nome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="CervejariaTipoCerveja.TipoCervejaId" class="control-label">Tipo de Cerveja</label>
                <select asp-for="CervejariaTipoCerveja.TipoCervejaId" class="form-control" asp-items="@(new SelectList(Model.TipoCervejas, "Id", "Nome"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}