@model BeerRoute.Models.TipoCerveja

@{
    ViewData["Title"] = $"Excluir {Model.Nome}";
}

<h1>Excluir @Model.Nome</h1>

<h3>Tem certeza de que deseja excluir este item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estilo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estilo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pais)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fabricante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fabricante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IBU)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IBU)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ABV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ABV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagemUrl)
        </dd>
